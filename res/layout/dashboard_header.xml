<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_dashboard_header"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/red" >

    <ImageButton
        android:id="@+id/btn_home"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/header_icon_margin"
        android:background="@drawable/ic_launcher"
        android:onClick="btnHomeClick" />

    <ImageView
        android:id="@+id/id_seperator_home"
        android:layout_width="2dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/header_icon_margin"
        android:layout_toRightOf="@id/btn_home"
        android:background="@drawable/separator" />

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_setting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/header_icon_margin"
        android:background="@drawable/ic_launcher"
        android:onClick="btnSettingClick" />
    
    <TextView
        android:id="@+id/btn_setting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/header_icon_margin"
        android:background="@drawable/ic_launcher"
        android:onClick="btnSettingClick" />

    <ImageView
        android:id="@+id/id_seperator_setting"
        android:layout_width="2dip"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/header_icon_margin"
        android:layout_toLeftOf="@id/btn_setting"
        android:background="@drawable/separator" />

    <TextView
        android:id="@+id/txvheader"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/id_seperator_home"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textColor="#ffff0000"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>